# Paper Search Agent Environment Variables

# Server Configuration
AGENT_HOST=0.0.0.0
AGENT_PORT=9998
AGENT_URL=http://localhost:9998/

# Paper Search Configuration
ARXIV_CATEGORIES=cs.AI,cs.LG,cs.CL
SEMANTIC_SCHOLAR_API_KEY=your-semantic-scholar-api-key
ENABLE_SEMANTIC_SCHOLAR=true
MAX_SEARCH_RESULTS=5

# Search Source Configuration
# Choose ONE search source: arxiv OR semantic_scholar
SEARCH_SOURCE=semantic_scholar
# Sort order for Semantic Scholar results (only used when SEARCH_SOURCE=semantic_scholar)
# Options: citationCount:desc, citationCount:asc, publicationDate:desc, publicationDate:asc, relevance
SEMANTIC_SCHOLAR_SORT=citationCount:desc

# LLM Configuration for Query Analysis (Required)
LLM_API_KEY=your-api-key
# Choose one of the following options:
# Option 1: Direct API URL
LLM_API_URL=https://api.openai.com/v1/chat/completions
# Option 2: Base URL (will be combined with /chat/completions)
LLM_BASE_URL=https://api.openai.com/v1
# Model configuration
LLM_MODEL=gpt-3.5-turbo
LLM_PROVIDER=openai
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.3
# Set to true to use original query if LLM analysis fails
USE_FALLBACK_ON_LLM_ERROR=false

# Logging Configuration
LOG_LEVEL=INFO
